.container {
  padding: 60rpx;
  background-color: #f2f2f2;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.section {
  background-color: #fff;
  padding: 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
  margin-bottom: 60rpx;
}

.section-title {
  font-size: 28rpx;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.input {
  margin-bottom: 20rpx;
  padding: 20rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.btn {
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.menu {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.logout-button {
  background-color: #007aff;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 16rpx;
  text-align: center;
  font-weight: bold;
}