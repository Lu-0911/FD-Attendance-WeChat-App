<view class="container">
  <!-- 管理员基本信息展示 -->
  <view class="info-card">
    <text class="title">欢迎您，{{admin.name}}</text>
    <view class="detail-item">
      <text>工号：{{admin.account}}</text>
    </view>
  </view>

  <!-- 功能按钮区域 -->
  <view class="grid-menu">
    <view class="menu-item" bindtap="goToImport">
    <image class="menu-icon" src="/images/import.png"></image>
      <text class="menu-text">批量导入</text>
    </view>
    <view class="menu-item" bindtap="goToExport">
      <image class="menu-icon" src="/images/export.png"></image>
      <text class="menu-text">导出考勤</text>
    </view>
    <view class="menu-item" bindtap="goToEdit">
      <image class="menu-icon" src="/images/edit.png"></image>
      <text class="menu-text">修改信息</text>
    </view>
    <view class="menu-item" bindtap="goToDelete">
      <image class="menu-icon" src="/images/delete.png"></image>
      <text class="menu-text">批量删除</text>
    </view>
    <view class="menu-item" bindtap="goToSettings">
      <image class="menu-icon" src="/images/settings.png"></image>
      <text class="menu-text">设置</text>
    </view>
  </view>
</view>

