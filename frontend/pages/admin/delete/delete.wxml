<view class="container">
  <view class="tips-section">
    <text class="tips-text">注意：删除操作不可恢复，请谨慎操作！！！</text>
  </view>

  <view class="delete-section">
    <text class="section-title">删除考勤记录</text>
    <input class="delete-input" placeholder="请输入：确认删除" bindinput="onAttendanceConfirmInput" value="{{attendanceConfirmText}}" />
    <button class="delete-button danger" bindtap="deleteAllAttendanceRecords">确认删除</button>
  </view>

  <view class="delete-section">
    <text class="section-title">删除选课记录</text>
    <input class="delete-input" placeholder="请输入：确认删除" bindinput="onStudentCourseConfirmInput" value="{{studentCourseConfirmText}}" />
    <button class="delete-button danger" bindtap="deleteAllStudentCourses">确认删除</button>
  </view>

  <view class="delete-section">
    <text class="section-title">删除某届学生</text>
    <input class="delete-input" placeholder="请输入年级（如：2023）" bindinput="onGradeInput" value="{{grade}}" />
    <button class="delete-button danger" bindtap="deleteStudentsByGrade">确认删除</button>
  </view>

  <view class="delete-section">
    <text class="section-title">删除所有教师</text>
    <input class="delete-input" placeholder="请输入：确认删除" bindinput="onTeacherConfirmInput" value="{{teacherConfirmText}}" />
    <button class="delete-button danger" bindtap="deleteAllTeachers">确认删除</button>
  </view>

  <view class="delete-section">
    <text class="section-title">删除所有课程</text>
    <input class="delete-input" placeholder="请输入：确认删除" bindinput="onCourseConfirmInput" value="{{courseConfirmText}}" />
    <button class="delete-button danger" bindtap="deleteAllCourses">确认删除</button>
  </view>
</view>
