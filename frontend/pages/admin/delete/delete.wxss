.container {
  padding: 20px;
  background-color: #f7f7f7;
}

.delete-section {
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  padding: 20px;
  margin-bottom: 15px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
  display: block;
  color: #333;
  padding-bottom: 5px;
}

.warning-text {
  font-size: 14px;
  color: #ff6b6b;
  margin-bottom: 10px;
  display: block;
}

.delete-input {
  border: 1px solid #cccccc;
  padding: 10px;
  border-radius: 5px;
  margin-bottom: 15px;
  width: 100%;
  box-sizing: border-box;
  font-size: 14px;
  height: 40px;
}

.delete-button {
  background-color: #dc3545;
  color: white;
  padding: 12px 15px;
  border-radius: 5px;
  width: 100%;
  font-size: 16px;
  font-weight: bold;
  transition: background-color 0.3s ease;
}

.delete-button:active {
  background-color: #c82333;
}
