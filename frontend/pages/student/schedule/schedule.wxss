.title {
  font-size: 48rpx;
  text-align: center;
}

.table {
  display: flex;
  flex-direction: column;
  border: 1rpx solid #ccc;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border-radius: 8rpx;
  overflow: hidden;
}

.table-header, .table-row {
  display: flex;
  border-top: 1rpx solid #ccc;
}

.time-cell {
  width: 80rpx;
  padding: 10rpx;
  background: #f5f5f5;
  text-align: center;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.day-cell {
  flex: 1;
  padding: 10rpx;
  text-align: center;
  border-left: 1rpx solid #ccc;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.course-cell {
  flex: 1;
  padding: 10rpx;
  text-align: center;
  border-left: 1rpx solid #ccc;
  font-size: 20rpx;
  min-height: 150rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.has-course {
  background-color: #eef5ff;
}

.modal-mask {
  position: fixed;
  top: 0; left: 0;
  width: 100%; height: 100%;
  background: rgba(0,0,0,0.4);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal {
  width: 80%;
  background: #fff;
  padding: 40rpx;
  border-radius: 20rpx;
}

.modal-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.modal-content text {
  display: block;
  margin-bottom: 10rpx;
  font-size: 26rpx;
}
