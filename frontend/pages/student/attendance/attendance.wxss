.container {
  padding: 20rpx;
}

.title {
  font-size: 48rpx;
  text-align: center;
}

.course-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.course-item {
  background-color: #eef5ff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.course-name {
  font-size: 36rpx;
  font-weight: bold;
}

.stats {
  display: flex;
  font-size: 32rpx;
  color: #666;
  gap: 200rpx;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  width: 80%;
  max-height: 80%;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.close {
  font-size: 72rpx;
  color: #999;
  padding: 10rpx;
}

.record-item {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #eee;
  font-size: 30rpx;
  color: #555;
}

.record-item:last-child {
  border-bottom: none;
}

.present {
  color: #28a745;
  font-weight: bold;
  line-height: 0.5;
}

.absent {
  color: #dc3545;
  font-weight: bold;
  line-height: 0.5;
}

.leave {
  color: #ffc107;
  font-weight: bold;
  line-height: 0.5;
}
