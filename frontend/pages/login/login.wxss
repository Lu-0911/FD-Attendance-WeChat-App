.login-container {
  padding: 60rpx;
  background-color: #f2f2f2;
  min-height: 100vh;
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  font-size: 30rpx;
  margin-bottom: 10rpx;
  display: block;
  color: #333;
}

.input {
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  border: 1px solid #ccc;
  font-size: 28rpx;
}


.login-button {
  margin-top: 30rpx;
  background-color: #007aff;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 16rpx;
}